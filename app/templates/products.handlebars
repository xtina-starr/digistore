      {{# each }}
        <li>
          {{# link-to "product" this }}
            {{ title }}
          {{/ link-to }}
        </li>
      {{/ each }}
    </ul>
  </div>
  <div class='col-lg-10'>
    {{ outlet }}
  </div>
</div>