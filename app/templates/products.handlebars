<h1>Products Directory</h1>
<div class='row'>
  <div class='col-lg-2'>
    <h4>All Products</h4>
    <ul class='list-unstyled'>
      {{# each }}
        <li>
          {{# link-to "product" this }}
          {{ title }}
          {{/ link-to }}
          ${{ format-price price }}
          <img {{ bind-attr src=image }} style="width: 80px; height:80px;" class='thumbnail'/>
        </li>
      {{/ each }}
    </ul>
  </div>
  <div class='col-lg-10'>
    {{ outlet }}
  </div>
</div>