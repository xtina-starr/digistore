<div style="width:50%; margin: 0 auto;">
  <h1 class="order-form">Order Form</h1>
  <form class="form-horizontal" role="form">
    <div class="form-group">
      <label for="first_name">First Name:</label>
      {{input type="text" value=first_name class="form-control"}}
    </div>

    <div class="form-group">
      <label for="last_name"> Last Name:</label>
      {{input type="text" value=last_name class="form-control"}}
    </div>

    <div class="form-group">
      <label for="email"> Email:</label>
      {{input type="type" value=email class="form-control"}}
    </div>

    <div class="form-group">
      <label for="credit_card"> Credit Card Number:</label>
      {{input type="type" value=credit_card class="form-control"}}
    </div>

    <div class="form-group">
      <label for="CVV">CVV:</label>
      {{input type="type" value=cvv class="form-control"}}
    </div>

    <div class="form-group">
      <label for="expiration_date"> Expiration Date:</label>
      {{input type="type" value=exiration_date class="form-control"}}
    </div>

    <button class="btn btn-success" {{action "checkout" this}} >Submit</button>
  </form>
</div>